<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <nav class="main-nav">
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Movies", movies_path %></li>
            <li><%= link_to "Genres", genres_path %></li>
            <li><%= link_to "Directors", directors_path %></li>
            <li><%= link_to "All Lists", lists_path %></li>
            <% if @current_user.present? %>
              <% if @current_user.admin? %>
                <li><%= link_to "All Users", users_path %></li>
              <% end %>
              <li><%= link_to "Log out #{ @current_user.username }", login_path, :method => 'delete' %></li>
            <% else %>
              <li><%= link_to "Sign Up", new_user_path %></li>
              <li><%= link_to "Log In", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </header>
      <%= yield %>
    </div>
  </body>
</html>
