<div class="list-main">
<% @lists.each do |list| %>
  <% if list.movies.present? %>
    <div class="movie-list">
      <h3 class="minor-top-buffer"><span class="public-list-names"><%= list.name %></span>by <%= list.user.name %></h3>
      <div class="board">
        <% list.movies.each do |movie| %>
        <div class="tile">
          <div class="photo">
            <%= link_to image_tag(movie.image, :class => 'thumb', :alt => movie.title), movie if movie.image.present? %>
          </div>
          <div class="movie-photo-name">
            <%= movie.title %>
          </div>
        </div>
        <% end %>
      </div>
  <% end %>
  <% end %>
</div>
