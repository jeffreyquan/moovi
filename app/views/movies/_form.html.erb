<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true, :autofocus => true %>
  <%= f.label :year %>
  <%= f.number_field :year %>
  <%= f.label :overview %>
  <%= f.text_field :overview %>
  <%= f.label :duration %>
  <%= f.number_field :duration %>
  <%= f.label :image %>
  <%= f.url_field :image %>
  <%= f.label :imdb_id %>
  <%= f.text_field :imdb_id %>
  <%= f.number_field :tmdb_id %>
  <%= f.select :director_id, Director.pluck(:name, :id).sort, :include_blank => true %>
  <%= hidden_field_tag "movie[genre_ids][]", nil %>
  <% Genre.all.order('name').each do |genre| %>
    <%= check_box_tag "movie[genre_ids][]", genre.id, @movie.genre_ids.include?(genre.id), id: dom_id(genre) %>
    <%= label_tag dom_id(genre), genre.name %><br>
  <% end %>
  <%= f.submit %>

<% end %>
