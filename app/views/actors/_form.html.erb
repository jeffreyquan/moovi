<%= form_for @actor do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :dob, "Date of birth: " %>
  <%= f.date_field :dob, :placeholder => 'YYYY-MM-DD' %>
  <%= f.label :pob, "Place of birth: " %>
  <%= f.text_field :pob %>
  <%= f.label :image %>
  <%= f.url_field :image %>
  <%= f.submit "Submit", :class=> "btn btn-primary" %>
<% end %>
