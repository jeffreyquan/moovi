<h1>Genres</h1>

<div class="genre-main">
  <% @genres.order('name').each do |genre| %>
    <h2 class="minor-top-buffer"><%= link_to genre.name, genre_path(genre) %></h2>
    <div class="board">
      <% genre.movies.each do |movie| %>
      <div class="tile">
        <div class="photo">
          <%= link_to image_tag(movie.image, :class => 'thumb', :alt => movie.title), movie %>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
</div>
