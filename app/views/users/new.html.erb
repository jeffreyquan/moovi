<div class="row login-modal">
  <div class="col-lg-4 offset-lg-4">
    <h1>Sign Up</h1>

    <%= form_for @user do |f| %>
      <div class="form-group top-buffer">
        <%= f.label :name %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
          </div>
            <%= f.text_field :name, :required => true, :autofocus => true, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :username %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-user-tag"></i></span>
          </div>
            <%= f.text_field :username, :required => true, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
          </div>
          <%= f.email_field :email, :required => true, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
          </div>
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
          </div>
        <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
      </div>

      <%= f.submit "Sign Up", :class => 'btn btn-primary btn-lg btn-block' %>
    <% end %>
    <div class="errors">
        <% if @user.errors.any? %>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>
    </div>
  </div>
</div>
